# Example environment variables for local development.
# Copy this file to `.env` and fill real values. DO NOT commit `.env`.

# Postgres connection
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=your_db_password_here
PGDATABASE=wallet_db
PGPORT=5432

# JWT secret for signing tokens (use a long random value in production)
JWT_SECRET=changeme_to_a_strong_secret

# Google OAuth client ID(s). Either a single client id or comma-separated list
# Example: GOOGLE_CLIENT_ID=web-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_ID=your-web-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_IDS=web-client-id.apps.googleusercontent.com,android-client-id.apps.googleusercontent.com

# Server port (optional)
PORT=3000

# Node environment
NODE_ENV=development
